            "varexp": "example.entries:slices",
            "selection": "",
            "option": "*L",
            "graphErrors": "0:errMeanX",
            "graphYRange": "",
            "graphXRange": "",
            "graphAxisLabel": "Number of Entries:Center of slices along x"
          }
        ],
        "initTrigger": [
          "userorcontrol"
        ],
        "updateTrigger": [
          "10 seconds"
