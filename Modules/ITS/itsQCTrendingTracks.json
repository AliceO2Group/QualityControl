            "reductorName": "o2::quality_control_modules::common::TH1Reductor",
            "moduleName": "QcITS"
          },
          {
            "type": "repository",
            "paths": ["qc/ITS/MO/ITSTrackTask/EtaDistribution"],
            "names": ["Eta"],
            "reductorName": "o2::quality_control_modules::common::TH1Reductor",
            "moduleName": "QcITS"
          },
          {
            "type": "repository",
            "paths": ["qc/ITS/MO/ITSTrackTask/PhiDistribution"],
            "names": ["Phi"],
            "reductorName": "o2::quality_control_modules::common::TH1Reductor",
            "moduleName": "QcITS"
          },      
          {
            "type": "repository",
            "paths": ["qc/ITS/MO/ITSTrackTask/OccupancyROF"],
