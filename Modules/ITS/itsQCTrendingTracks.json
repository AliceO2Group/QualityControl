            "varexp": ["ClusterUsage.mean:ntreeentries", "ClusterUsage.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          }
        ],
        "initTrigger": [
          "userorcontrol"
        ],
        "updateTrigger": [
          "10 seconds"
        ],
        "stopTrigger": [
          "userorcontrol"
        ]
