            "names": [
                      "VertexX",
                      "VertexY"
                     ],
            "reductorName": "o2::quality_control_modules::common::TH2Reductor",
            "moduleName": "QcITS"
          }
        ],
        "plots": [
          {
            "names": ["NClusters_mean", "NClusters_stddev"],
            "title": ["Average NClusters trend", "Stddev NClusters trend"],
            "varexp": ["NClusters.mean:ntreeentries", "NClusters.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["EtaDistribution_mean", "EtaDistribution_stddev"],
            "title": ["Average EtaDistribution trend", "Stddev EtaDistribution trend"],
            "varexp": ["EtaDistribution.mean:ntreeentries", "EtaDistribution.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["PhiDistribution_mean", "PhiDistribution_stddev"],
            "title": ["Average PhiDistribution trend", "Stddev PhiDistribution trend"],
            "varexp": ["PhiDistribution.mean:ntreeentries", "PhiDistribution.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["VertexZ_mean", "VertexZ_stddev"],
            "title": ["Average VertexZ trend", "Stddev VertexZ trend"],
            "varexp": ["VertexZ.mean:ntreeentries", "VertexZ.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["NVertexContributors_mean", "NVertexContributors_stddev"],
            "title": ["Average NVertexContributors trend", "Stddev NVertexContributors trend"],
            "varexp": ["NVertexContributors.mean:ntreeentries", "NVertexContributors.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["AssociatedClusterFraction_mean", "AssociatedClusterFraction_stddev"],
            "title": ["Average AssociatedClusterFraction trend", "Stddev AssociatedClusterFraction trend"],
            "varexp": ["AssociatedClusterFraction.mean:ntreeentries", "AssociatedClusterFraction.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["Ntracks_mean", "Ntracks_stddev"],
            "title": ["Average Ntracks trend", "Stddev Ntracks trend"],
            "varexp": ["Ntracks.mean:ntreeentries", "Ntracks.stddev:ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["VertexX_mean", "VertexX_stddev"],
            "title": ["Average VertexX trend", "Stddev VertexX trend"],
            "varexp": ["VertexX.sumwx/VertexX.sumw:ntreeentries", "TMath::Sqrt((VertexX.sumwx2/VertexX.sumw)-(VertexX.sumwx/VertexX.sumw)*(VertexX.sumwx/VertexX.sumw)):ntreeentries"],
            "selection": "",
            "option": "PL"
          },
          {
            "names": ["VertexY_mean", "VertexY_stddev"],
            "title": ["Average VertexY trend", "Stddev VertexY trend"],
