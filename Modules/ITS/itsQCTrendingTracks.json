            "names": ["NClusters",
                      "EtaDistribution",
                      "PhiDistribution",
                      "VertexZ",
                      "NVertexContributors",
                      "AssociatedClusterFraction",
                      "Ntracks"
                     ],
            "reductorName": "o2::quality_control_modules::common::TH1Reductor",
            "moduleName": "QcITS"
          },
          {
            "type": "repository",
            "paths": [
                      "ITS/MO/ITSTrackTask/VertexCoordinates",
                      "ITS/MO/ITSTrackTask/VertexCoordinates"
